<div class="mt-4 ms-4 me-4 mb-4">
  <h3>EDIT COURSE</h3>
  <div class="row">
    <div class="col-8">
      <form method="POST" action="/course/{{course._id}}?_method=PUT">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            value="{{course.name}}"
            name="name"
          />
        </div>
        <div class="form-group">
          <label for="desc">
            Description</label>
          <textarea
            class="form-control"
            id="desc"
            name="description"
            rows ="4"
          />{{course.description}}</textarea>
        </div>
        <div class="form-group mb-4">
          <label for="id">Video ID</label>
          <input
            type="text"
            class="form-control"
            id="id"
            value="{{course.videoId}}"
            name="videoId"
          />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
    <div class="col-4">
      <img
              src="https://img.youtube.com/vi/{{course.videoId}}/sddefault.jpg"
              class="card-img-top"
              alt={{course.name}}
      />
    </div>
  </div>
</div>
