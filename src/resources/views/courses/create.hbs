<div class="mt-4 ms-4 me-4">
  <h3>CREATE COURSE</h3>
  <div class="row">
    <div class="col">
      <form method="POST" action="/course/store">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" required />
        </div>
        <div class="form-group">
          <label for="desc">
            Description</label>
          <input
            type="text"
            class="form-control"
            id="desc"
            name="description"
            required
          />
        </div>
        <div class="form-group mb-4">
          <label for="id">Video ID</label>
          <input type="text" class="form-control" id="id" name="videoId" required/>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
      </form>
    </div>
    <div class="col"></div>
  </div>
</div>